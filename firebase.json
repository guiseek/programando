{
  "hosting": [
    {
      "target": "blog",
      "public": "dist/static/apps/blog",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(jpg|webp|jpeg|gif|png|svg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=2678400"
            },
            {
              "key": "Content-Encoding",
              "value": "gzip"
            }
          ]
        },
        {
          "source": "ngsw-worker.js",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=0"
            }
          ]
        }
      ]
    }
  ]
}
