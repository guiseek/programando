{
  "hosting": [
    {
      "target": "blog",
      "public": "dist/static/apps/blog",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**/*.@(jpg|webp|jpeg|gif|png|svg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=2678400"
            },
            {
              "key": "Content-Encoding",
              "value": "gzip"
            }
          ]
        },
        {
          "source": "ngsw-worker.js",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=0"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "yarn lint cloud-functions",
      "yarn build cloud-functions --prod"
    ],
    "source": "/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "apps/blog",
      "apps/elements",
      "**/node_modules/**",
      "libs",
      "docs"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
