{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@webapp/env": ["environments/environment.ts"],
      "@webapp/common/ui/brand": ["libs/common/ui/brand/src/index.ts"],
      "@webapp/common/ui/video": ["libs/common/ui/video/src/index.ts"],
      "@webapp/common/ui/kit": ["libs/common/ui/kit/src/index.ts"],
      "@webapp/portal/feature-shell": [
        "libs/portal/feature-shell/src/index.ts"
      ],
      "@webapp/common/ui/sidenav": ["libs/common/ui/sidenav/src/index.ts"],
      "@webapp/common/ui/cdk/accordion": [
        "libs/common/ui/cdk/accordion/src/index.ts"
      ],
      "@webapp/blog/feature-shell": ["libs/blog/feature-shell/src/index.ts"],
      "@webapp/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@webapp/shared/auth": ["libs/shared/auth/src/index.ts"],
      "@webapp/common/ui/cdk/popover": [
        "libs/common/ui/cdk/popover/src/index.ts"
      ],
      "@webapp/common/ui/navbar": ["libs/common/ui/navbar/src/index.ts"],
      "@webapp/common/ui/toolbar": ["libs/common/ui/toolbar/src/index.ts"],
      "@webapp/academy/feature-shell": [
        "libs/academy/feature-shell/src/index.ts"
      ],
      "@webapp/shared/account/feature-account": [
        "libs/shared/account/feature-account/src/index.ts"
      ],
      "@webapp/shared/account/data-access": [
        "libs/shared/account/data-access/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
